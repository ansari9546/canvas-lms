<%= fields_for :@settings, OpenObject.new(@settings) do |f| %>
  <%= logger.error "settings========>>>>> #{@settings}"
    %>
  <table style="width: 500px;" class="formtable">
    <tr>
      <td colspan="2">
        <%= mt :description, "You will need access to a [OneScreen Revel](%{url}) instance.", :url => "https://onescreensolutions.com" %>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :domain, :en => "Domain" %></td>
      <td>
        <%= f.text_field :domain %><br>
        <%= mt :domain_description, "**hostname** or **ip address** of your OneScreen Revel installation (e.g. revel.onescreensolutions.com)" %>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :secret, :en => "Secret" %></td>
      <td>
        <%= f.password_field :secret, :autocomplete => false %><br>
        <%= mt :secret_description, "This is the **secret** that can be found in **properties** file", :parameter_name => markdown_safe('**beans.dynamicConferenceService.securitySalt**'), :filename => markdown_safe('**BigBlueButton.properties**') %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= f.check_box :recording_enabled %> <%= f.label :recording_enabled, :en => "Allow conferences to be recorded." %>
      </td>
    </tr>
      <tr style="display:none;">
        <td></td>
        <td>
          <%= f.check_box :free_trial %> <%= f.label :free_trial, :en => "Mark this OneScreen Revel instance as a free trial" %>
        </td>
      </tr>
      <tr style="display:none;">
        <td></td>
        <td>
          <%= f.check_box :replace_with_alternatives %> <%= f.label :replace_with_alternatives, :en => "Disable OneScreen Revel conferences; show a list of alternatives instead" %>
        </td>
      </tr>
    <tr style="display:none;">
      <td></td>
      <td>
        <%= f.check_box :use_fallback %> <%= f.label :use_fallback, :en => "Use OneScreen Revel Fallback Plugin settings to look for recordings for conferences that weren't hosted by the currently configured BBB instance." %>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :myscriptApiKey, :en => "MyScript Api Key " %></td>
      <td>
        <%= f.text_field :myscriptApiKey %><br>
      </td>
    </tr>
    <tr>
      <td><%= f.blabel :myscriptHmacKey, :en => "MyScript Hmac Key" %></td>
      <td>
        <%= f.text_field :myscriptHmacKey %><br>
      </td>
    </tr>
  </table>
<% end %>
